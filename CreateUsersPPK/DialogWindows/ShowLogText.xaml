<Window x:Class="CreateUsersPPK.DialogWindows.ShowLogText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лог"
        Width="441"
        Height="230"
        Background="#FFA4A4A4"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="log"
                 Margin="10,10,10,37"
                 IsReadOnly="True"
                 IsReadOnlyCaretVisible="True"
                 TextWrapping="Wrap" />
        <Button x:Name="btOK"
                Width="75"
                Margin="0,0,10,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="btOK_Click"
                Content="OK" />
    </Grid>
</Window>
